<h1> Workout: <%= @workout.name %>    Date: <%= @workout.date %></h1>

<% @exercises.each do |exercise| %>
  <div>
    <p>Exercise: <%= exercise.exercise %></p>
    <p>Sets: <%= exercise.sets %></p>
    <p>Weight: <%= exercise.weight %></p>
  </div>
<% end %>


<form method="post" action="/workouts/<%=@workout.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Workout">
</form>

<a href="/workouts/<%=@workout.id%>/edit">Edit Workout </a>
<br>
<a href="/workouts">See Workout </a>
<br>
<a href="/workouts/<%=@workout.id%>/exercises/new">add exercises</a>
